@model IEnumerable<CJMovieTracker.Data.Movie>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="CreateMovieStart">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                @Html.DisplayNameFor(model => model.MovieTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateWatched)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ChrisRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JacieRating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.WhoPicked)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src=@item.getPoster()> 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateWatched)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ChrisRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JacieRating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.WhoPicked)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MovieId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MovieId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MovieId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
